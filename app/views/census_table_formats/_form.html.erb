<%= simple_form_for @census_table_format, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :census_format, collection: CensusFormat.all(order: 'name'), value_method: :id, label_method: :name, include_blank: false %>
  <%= f.association :scout_type, collection: ScoutType.all(order: 'name'), value_method: :id, label_method: :name, include_blank: false %>
  <%= f.association :membership_type, collection: MembershipType.all(order: 'name'), value_method: :id, label_method: :name, include_blank: false %>
  <%= f.input :row %>
  <%= f.input :column %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                census_table_formats_path, :class => 'btn' %>
  </div>
<% end %>
