<%- model_class = Membership -%>
<% years = Year.find(:all) %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:organisation_id) %></th>
      <% years.each do |year| %>
        <th class="year"><%= year.name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= link_to membership.organisation.name, organisation_path(membership.organisation) %></td>
        <% years.each do |year| %>
          <td class="year"><%= membership.organisation.total_head_count_for_year(year) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>