<%- model_class = Award -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_award_path,
            :class => 'btn btn-primary' %>

<%= link_to t('.upload', :default => t("helpers.links.upload")),
upload_awards_path,
:class => 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:organisation_id) %></th>
      <th><%= model_class.human_attribute_name(:year_id) %></th>
      <th><%= model_class.human_attribute_name(:award_type_id) %></th>
      <th><%= model_class.human_attribute_name(:award_count) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= link_to award.organisation.name, organisation_path(award.organisation) %></td>
        <td><%= award.year.name%></td>
        <td><%= award.award_type.name %></td>
        <td><%= award.award_count %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_award_path(award), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      award_path(award),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

