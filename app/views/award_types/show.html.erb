<%- model_class = AwardType -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dt><strong><%= model_class.human_attribute_name(:scout_type) %>:</strong></dt>
  <dd><%= @award_type.code %></dd>
  <dd><%= @award_type.name %></dd>
  <dd><%= @award_type.scout_type %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              award_types_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_award_type_path(@award_type), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              award_type_path(@award_type),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
