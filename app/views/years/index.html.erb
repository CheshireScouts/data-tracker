<%- model_class = Year -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>    
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:group_census_format) %></th>
      <th><%= model_class.human_attribute_name(:district_census_format) %></th>
      <th><%= model_class.human_attribute_name(:county_census_format) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @years.each do |year| %>
      <tr id=<%= year.id %>>
        <td><%= link_to year.name, year_path(year) %></td>
        <td><%= year.group_census_format.name if year.group_census_format %></td>
        <td><%= year.district_census_format.name if year.district_census_format %></td>
        <td><%= year.county_census_format.name if year.county_census_format %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_year_path(year), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      year_path(year),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_year_path,
            :class => 'btn btn-primary' %>
