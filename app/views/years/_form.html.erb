<%= simple_form_for @year, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.association :group_census_format, collection: CensusFormat.all(order: 'name'), value_method: :id, label_method: :name, include_blank: false %>
  <%= f.association :district_census_format, collection: CensusFormat.all(order: 'name'), value_method: :id, label_method: :name, include_blank: false %>
  <%= f.association :county_census_format, collection: CensusFormat.all(order: 'name'), value_method: :id, label_method: :name, include_blank: false %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                years_path, :class => 'btn' %>
  </div>
<% end %>
