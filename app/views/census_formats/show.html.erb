<%- model_class = CensusFormat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @census_format.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:table_xpath) %>:</strong></dt>
  <dd><%= @census_format.table_xpath %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              census_formats_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_census_format_path(@census_format), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              census_format_path(@census_format),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
