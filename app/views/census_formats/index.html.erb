<%- model_class = CensusFormat -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:table_xpath) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @census_formats.each do |census_format| %>
      <tr>
        <td><%= link_to census_format.name, census_format_path(census_format) %></td>
        <td><%= census_format.table_xpath %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_census_format_path(census_format), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      census_format_path(census_format),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_census_format_path,
            :class => 'btn btn-primary' %>
